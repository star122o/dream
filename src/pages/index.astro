---
import '../styles/global.css';
import {
  Discord,
  Github,
  Gnuprivacyguard,
  Telegram,
  X
} from 'simple-icons-astro';

const BIRTH_YEAR = 2010;
const currentYear = new Date().getUTCFullYear();
const age = currentYear - BIRTH_YEAR;

const SOCIAL_LINKS = [
  { name: 'GitHub', url: 'https://github.com/star122o', Icon: Github },
  { name: 'Telegram', url: 'https://telegram.me/star122o', Icon: Telegram },
  {
    name: 'PGP',
    url: 'https://keyserver.ubuntu.com/pks/lookup?search=01FA302D6298F066B65048E5DB1290FE292E8894&fingerprint=on&op=index',
    Icon: Gnuprivacyguard
  },
  { name: 'X', url: 'https://x.com/star122o', Icon: X },
  {
    name: 'Discord',
    url: 'https://discord.com/users/1245349618905255946',
    Icon: Discord
  }
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Stargaze</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300..700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-[#080808] text-white font-['Comfortaa',sans-serif] selection:bg-white/20"
  >
    <div class="fixed inset-0 -z-10 h-full w-full">
      <img
        src="/img/wp.png"
        alt=""
        class="h-full w-full object-cover filter blur-[5px] brightness-[0.85]"
      />
    </div>

    <main
      class="flex flex-col md:flex-row justify-center items-center min-h-screen gap-10 px-8 py-20"
    >
      <div class="shrink-0">
        <img
          src="/img/pfp.jpg"
          alt="profile picture"
          class="w-48 h-48 rounded-full object-cover drop-shadow-[0_0_20px_rgba(255,255,255,0.2)] border border-white/10"
        />
      </div>

      <div
        class="max-w-xl flex flex-col items-center md:items-start text-center md:text-left"
      >
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight mb-2">
          <span class="text-white/90">Stargaze</span>
        </h1>

        <p class="text-sm text-white/40 mb-6 tracking-widest">
          /stɑː ɡeɪz/ • {age} • they/them
        </p>

        <div class="space-y-4 text-gray-300 leading-relaxed font-light">
          <div
            class="bg-white/5 border border-white/10 rounded-2xl p-4 backdrop-blur-md"
          >
            <ul
              class="flex flex-row gap-5 list-none p-0 justify-center md:justify-start"
            >
              {
                SOCIAL_LINKS.map(({ name, url, Icon }) => (
                  <li>
                    <a
                      href={url}
                      target="_blank"
                      rel="noopener noreferrer"
                      aria-label={name}
                      class="text-white opacity-40 hover:opacity-100 transition-all duration-300 hover:scale-110 block"
                    >
                      <Icon size="24" class="fill-current" />
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </main>

    <footer class="fixed bottom-8 w-full text-center space-x-4">
      <a
        href="./info"
        class="text-xs uppercase tracking-[0.2em] text-white/30 hover:text-white/80 transition-all duration-500"
      >
        Info
      </a>
      <span class="text-white/10">|</span>
      <a
        href="./dni"
        class="text-xs uppercase tracking-[0.2em] text-white/30 hover:text-white/80 transition-all duration-500"
      >
        DNI
      </a>
      <span class="text-white/10">|</span>
      <a
        href="./friends"
        class="text-xs uppercase tracking-[0.2em] text-white/30 hover:text-white/80 transition-all duration-500"
      >
        Friends
      </a>
      <span class="text-white/10">|</span>
      <a
        href="./motd.txt"
        class="text-xs uppercase tracking-[0.2em] text-white/30 hover:text-white/80 transition-all duration-500"
      >
        MOTD
      </a>
    </footer>
  </body>
</html>
